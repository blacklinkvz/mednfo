      <div class="container marketing">
        <div class="d-flex justify-content-center"><h1>Articulos</h1></div>
        <div class="d-flex justify-content-end">
        <% if current_user %>  
          <%= link_to "New article", new_article_path, :class => "btn btn-sm btn-success rounded-pill px-2" %>
        <% end %>
        </div>
          <div id="articles">
            <% @articles.each do |article| %>
              <%= render article %>
            <% end %>
  </div>
</div>